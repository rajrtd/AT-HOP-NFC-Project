<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#17232f">

    <LinearLayout
            android:orientation="vertical"
            android:layout_height="350dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp" android:background="#17232f" android:layout_marginTop="5dp"
            android:padding="50dp" app:layout_constraintVertical_bias="0.269" android:layout_width="match_parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="232dp"
                android:layout_height="wrap_content" android:layout_weight="0" android:padding="20dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
                    android:layout_weight="1"/>
            <TextView
                    android:text=" Log in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"
                    android:textSize="34sp" android:lineSpacingExtra="8sp" android:textStyle="bold"
            />
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="15"
                android:id="@+id/emailField" android:hint="Email..."
                android:singleLine="false" android:background="#fffcc8" android:gravity="center"
                android:layout_weight="0" android:layout_gravity="center" android:minHeight="48dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="15"
                android:id="@+id/passwordField"
                android:hint="Password..."
                android:background="#fffcc8" android:layout_gravity="center"
                android:gravity="center" android:layout_weight="0" android:minHeight="48dp"/>
        <Button
                android:text="Log in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/logInButton" android:layout_weight="0"
                android:backgroundTint="#4488dd "/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="600dp" android:background="#17232f">
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_gravity="center"
                android:background="#4488dd">
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Sign up for AT-NFC"
                    android:id="@+id/signUpButton"
                    android:layout_width="300dp" android:layout_height="match_parent"
                    android:background="#4488dd" android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="227dp"
            android:layout_height="69dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="460dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp">


        <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSignInButton"
                android:layout_width="201dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>